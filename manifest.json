{
  "manifest_version": 2,
  "name": "Auto Tab Organizer",
  "version": "1.0",
  "description": "Regroupe automatiquement les onglets par type et leur attribue une couleur.",
  "permissions": ["tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "auto-tab-organizer@mozilla.org",
      "strict_min_version": "91.0"
    }
  },
  "icons": {
    "48": "icon.png"
  }
}
